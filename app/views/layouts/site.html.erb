 <script type="text/javascript">
 $(document).ready(function(){
   var ht=$(window).height();
   $('.sliderWrapper .slider').css('height',ht-100);
   $('.sliderWrapper .bx-viewport').css('height',ht);
   	$('.bxslider').bxSlider({
   	   	mode: 'fade',
    		captions: true,
    		controls: true,
    		auto: false
  	});

    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
      acc[i].onclick = function() {
        this.classList.toggle("active");
        var panel = this.nextElementSibling;
        if (panel.style.maxHeight){
          panel.style.maxHeight = null;
        } else {
          panel.style.maxHeight = panel.scrollHeight + "px";
        } 
      }
    }


    var acc = document.getElementsByClassName("floor-accordian");
    var i;

    for (i = 0; i < acc.length; i++) {
      acc[i].onclick = function() {
        this.classList.toggle("active");
        var floor_panel = this.nextElementSibling;
        if (floor_panel.style.maxHeight){
          floor_panel.style.maxHeight = null;
        } else {
          floor_panel.style.maxHeight = floor_panel.scrollHeight + "px";
        } 
      }
    }

});
 </script> 
