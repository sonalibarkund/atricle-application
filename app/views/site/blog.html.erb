<section>
	<div class="container pdnt100">
		Blog Page
		<div class="col-12">
			<% @blog.each do |blog| %>
				<div class="col-4">
					<h1 class="color-green">
						<%= blog.title %>
					</h1>
					<img src="<%= blog.image.url %>" width="200" height="200"><br/>
					<%= blog.shortdesc %><br/><br/>
					<a href="<%= url_blogdetail(blog.slug) %>" class="know-more">Know More</a>	
				</div>
			<% end %>
		</div>
	</div>
</section>